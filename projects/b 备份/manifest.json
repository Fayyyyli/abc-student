{
  "manifest_version": 3,
  "host_permissions": ["<all_urls>"],
  "name": "Cyber lizard",
  "version": "1.0",
  "description": "Be aware! Lizard the link-eater is coming!",
  "content_scripts": [
    {
  
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {    
    "default_icon": { "16": "16x16.png",
                      "32": "32x32.png",
                      "48": "48x48.ico"},
    "default_popup": "popup/popup.html"
  },
  "icons": { 
  "16": "16x16.png",
  "32": "32x32.png",
  "48": "48x48.ico"},
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "system.display",    
    "scripting"
  ]
}